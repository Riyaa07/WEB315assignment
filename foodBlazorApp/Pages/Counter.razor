@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>
<p>Increment Amount: @IncrementAmount</p>
<h4>High Score :@currentCount</h4>

<button class="btn btn-primary" @onclick="ResetCount">Reset Click me</button>
<button class="btn btn-primary" @onclick="IncrementCount">Increase Click me</button>
<button class="btn btn-primary" @onclick="DecrementCount">Decrease Click me</button>

@code {
    private int currentCount = 0;
    
    [Parameter]
    public int IncrementAmount { get; set; } = 1;

       private void ResetCount()
    {
        currentCount =0;
    }

      private void IncrementCount()
       {if(currentCount < 20){
      currentCount += IncrementAmount;
      }
    }

    private void DecrementCount()
     {if(currentCount > 1){
        currentCount--;
      }
    }
}

